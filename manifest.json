{
  "manifest_version": 3,
  "name": "LinkedIn Profile Scraper",
  "version": "1.0",
  "description": "Open profile links, scrape data, and POST to API",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*",
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
